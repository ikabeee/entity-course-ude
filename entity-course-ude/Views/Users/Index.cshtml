@model IEnumerable<entity_course_ude.Models.User>
@{
    ViewData["Title"] = "Usuarios ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-4">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary text-white form-control">Crear Usuario</a>
    </div>
</div>
</div>

</div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(user => user.Name)</th>
                    <th>@Html.DisplayNameFor(user => user.Email)</th>
                    <th>@Html.DisplayNameFor(user => user.UserDetail_Id)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.UserDetail_Id</td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@user.Id">Editar</a>
                            <a class="btn btn-secondary text-white" asp-action="Detail" asp-route-id="@user.Id">Detalle</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@user.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay Usuarios disponibles</p>
    }
</div>