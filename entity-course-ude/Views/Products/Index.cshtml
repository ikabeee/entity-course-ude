@model IEnumerable<entity_course_ude.Models.Product>
@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-4">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary text-white form-control">Crear Producto</a>
    </div>
</div>
</div>

</div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(a => a.Product_Id)</th>
                    <th>@Html.DisplayNameFor(a => a.Name)</th>
                    <th>@Html.DisplayNameFor(a => a.Description)</th>
                    <th>@Html.DisplayNameFor(a => a.Grade)</th>
                    <th>@Html.DisplayNameFor(a => a.Category.Name)</th>
                    <th>Acciones</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Product_Id</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Grade</td>
                        <td>@product.Category.Name</td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Edit"
                                asp-route-id="@product.Product_Id">Editar</a>
                            <a class="btn btn-primary text-white" asp-action="ManageTags"
                                asp-route-id="@product.Product_Id">Administrar etiquetas</a>
                            <a class="btn btn-danger text-white" asp-action="Delete"
                                asp-route-id="@product.Product_Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay Productos</p>
    }
</div>